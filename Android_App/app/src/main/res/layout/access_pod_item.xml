<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="4dp">

    <TextView
        android:id="@+id/datetimeItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12/12/20 | 20:15:19"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/purple_700"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/userItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12/12/20-20:15:19"
        android:layout_marginTop="8dp"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@id/datetimeItem"
        app:layout_constraintStart_toStartOf="@+id/datetimeItem" />

    <TextView
        android:id="@+id/podItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12/12/20-20:15:19"
        android:layout_marginTop="8dp"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@id/userItem"
        app:layout_constraintStart_toStartOf="@+id/datetimeItem" />

    <ImageView
        android:id="@+id/details"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/icon_plus"
        android:gravity="center" />

    <TextView
        android:id="@+id/accessType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/details"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Denied"
        android:textSize="16sp"
        />

