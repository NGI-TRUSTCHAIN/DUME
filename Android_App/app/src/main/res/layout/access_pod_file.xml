<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="4dp">

    <ImageView
        android:id="@+id/iconVideo"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/ic_baseline_cloud_done_24"
        />


    <TextView
        android:id="@+id/datetimeItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12/12/20 | 20:15:19"
        android:textSize="20sp"
        android:layout_marginStart="32dp"
        android:textStyle="bold"
        android:textColor="@color/purple_700"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iconVideo"  />

    <TextView
        android:id="@+id/userItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12/12/20-20:15:19"
        android:layout_marginTop="8dp"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@id/datetimeItem"
        app:layout_constraintStart_toStartOf="@+id/datetimeItem" />

    <TextView
        android:id="@+id/podItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12/12/20-20:15:19"
        android:layout_marginTop="8dp"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@id/userItem"
        app:layout_constraintStart_toStartOf="@+id/datetimeItem" />

    <ImageView
        android:id="@+id/details"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/icon_eye"
        android:gravity="center" />


</androidx.constraintlayout.widget.ConstraintLayout>